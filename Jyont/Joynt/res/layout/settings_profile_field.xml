<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/settings_bg"
    android:gravity="center_horizontal"
    android:orientation="vertical" >
<include layout="@layout/i_title" />
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingLeft="10.0dip"
        android:paddingRight="10.0dip"
        android:paddingTop="40.0dip" >

        <TextView
            android:id="@android:id/hint"
            style="@style/ShadowDown.White.Bold"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:paddingRight="5.0dip"
            android:textColor="@color/settings_field_cnt_valid"
            android:textSize="12.0sp" />

      

        <EditText
          android:id="@android:id/edit"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2.0dip"
            android:background="@drawable/edit_text"
            android:inputType="text|textVisiblePassword"
            android:maxHeight="80.0dip"
            android:maxLength="20"
            android:paddingBottom="10.0dip"
            android:paddingLeft="13.0dip"
            android:paddingRight="13.0dip"
            android:paddingTop="10.0dip" />
            <requestFocus />
       

        <Button
            android:id="@android:id/button1"
            style="@style/ShadowDown.White"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5.0dip"
            android:background="@drawable/setting_bt"
            android:paddingLeft="30.0dip"
            android:paddingRight="30.0dip"
            android:text="@string/save"
            android:textColor="@color/settings_btn_add"
            android:textSize="@dimen/settings_btn_add" />
    </LinearLayout>

</LinearLayout>