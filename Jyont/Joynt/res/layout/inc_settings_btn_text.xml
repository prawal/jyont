<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:gravity="center_vertical" 
    android:orientation="horizontal" 
    android:id="@+id/settings_btn"
     android:background="@drawable/btn_setting_list"
      android:paddingLeft="@dimen/settings_btn_padding_left" 
      android:paddingRight="@dimen/settings_btn_padding_right" 
      android:layout_width="fill_parent"
       android:layout_height="@dimen/settings_btn_height"
        android:layout_marginLeft="@dimen/settings_margin_left"
         android:layout_marginTop="@dimen/settings_margin_top"
          android:layout_marginRight="@dimen/settings_margin_right" 
    android:layout_marginBottom="@dimen/settings_margin_bottom"
  xmlns:android="http://schemas.android.com/apk/res/android"  android:clickable="true">
    <TextView android:textSize="@dimen/settings_btn_title" 
        android:textColor="@android:color/black" 
        android:id="@android:id/text1"
         android:layout_width="wrap_content"
          android:layout_height="wrap_content" />
    <TextView android:textSize="@dimen/settings_btn_text"
         android:textColor="@color/settings_btn_text"
          android:ellipsize="end" 
          android:gravity="right" 
          android:id="@android:id/text2" 
          android:paddingLeft="10.0dip" 
          android:layout_width="wrap_content" 
          android:layout_height="wrap_content" 
          android:singleLine="true" 
          android:layout_weight="1.0" />
    <ImageView android:id="@android:id/icon1" 
        android:paddingLeft="8.579987dip" 
        android:layout_width="wrap_content"
         android:layout_height="wrap_content"
          android:src="@drawable/setting_list_arrow" />
</LinearLayout>
