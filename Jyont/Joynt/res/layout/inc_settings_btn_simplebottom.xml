<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/settings_btn"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/settings_btn_height"
    android:layout_marginBottom="@dimen/settings_margin_bottom"
    android:layout_marginLeft="@dimen/settings_margin_left"
    android:layout_marginRight="@dimen/settings_margin_right"
    android:background="@drawable/btn_setting_list_bottom"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/settings_btn_padding_left"
    android:paddingRight="@dimen/settings_btn_padding_right"  android:clickable="true">

    <include layout="@layout/inc_settings_btn_part_title_fullweight" />
    <include layout="@layout/inc_settings_btn_part_arrow" />
</LinearLayout>
