<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical" android:background="@color/settings_bg" android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">  
  <include layout="@layout/i_title" />
    <ScrollView android:layout_width="fill_parent" android:layout_height="fill_parent" android:cacheColorHint="#00000000">
