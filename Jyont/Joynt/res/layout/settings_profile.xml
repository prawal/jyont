                     android:paddingLeft="10.559998dip"
                      android:layout_width="fill_parent" 
                      android:layout_height="wrap_content">
                    <TextView android:textSize="14.0sp" 
                        android:textColor="#ff2e3c5c"
                         android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
