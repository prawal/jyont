                      android:layout_marginLeft="10.0dip" 
                      android:layout_marginTop="@dimen/settings_margin_top" 
                      android:layout_marginRight="@dimen/settings_margin_right"
                       android:text="@string/settings_profile_allow_search_by_id_guide"
                        android:shadowColor="#fff6f6f6" 
                        style="@style/ShadowDown" />
            
        </LinearLayout>
    </ScrollView>
</LinearLayout>
